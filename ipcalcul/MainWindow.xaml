<Window x:Class="IPv4Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IPv4 Kalkulátor" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,20">
            <TextBlock Text="IPv4 Kalkulátor" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="IP cím:"/>
            <TextBox x:Name="IpTextBox" Margin="0,5,0,10" Height="30"/>

            <TextBlock Text="Maszk:"/>
            <TextBox x:Name="MaskTextBox" Margin="0,5,0,10" Height="30"/>

            <Button Content="Számolás" Height="35" Click="Calculate_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Eredmények:" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="NetworkText"/>
            <TextBlock x:Name="BroadcastText"/>
            <TextBlock x:Name="CidrText"/>
            <TextBlock x:Name="FirstHostText"/>
            <TextBlock x:Name="LastHostText"/>
            <TextBlock x:Name="HostCountText"/>
        </StackPanel>
    </Grid>
</Window>
